<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user.timer.TimerFragment"
        android:background="@android:color/black">

        <View
            android:id="@+id/bg_green"
            android:layout_width="@dimen/_300dp"
            android:layout_height="@dimen/_300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_circular" />

        <View
            android:id="@+id/mulai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_20dp"
            android:background="@drawable/bg_circular"
            android:backgroundTint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/bg_green"
            app:layout_constraintEnd_toEndOf="@+id/bg_green"
            app:layout_constraintStart_toStartOf="@+id/bg_green"
            app:layout_constraintTop_toTopOf="@+id/bg_green" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/mulai"
            app:layout_constraintEnd_toEndOf="@id/mulai"
            app:layout_constraintTop_toTopOf="@id/mulai"
            app:layout_constraintBottom_toBottomOf="@id/mulai"
            style="@style/DMSansBoldTitleGreen"
            android:textSize="@dimen/_35sp"
            android:text="MULAI" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>