<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.tentang.TentangFragment">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardfortoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="0dp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardfortoolbar"
            app:layout_constraintBottom_toBottomOf="@id/cardfortoolbar"
            android:layout_marginStart="@dimen/_16dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:elevation="5dp" />

        <TextView
            style="@style/DMSansBoldTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:elevation="5dp"
            android:text="Tentang"
            app:layout_constraintBottom_toBottomOf="@id/cardfortoolbar"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintTop_toTopOf="@id/cardfortoolbar" />


        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardfortoolbar"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/DMSansBoldTitle"
            android:textSize="@dimen/_20dp"
            android:text="eHealth Calendar Physical Activity"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/_16dp"/>

        <TextView
            android:id="@+id/inventor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/desc_tentang"
            style="@style/DMSansRegular"
            />

        <ImageView
            android:id="@+id/bg_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            app:layout_constraintTop_toBottomOf="@id/inventor"
            android:elevation="0dp"
            android:layout_marginTop="@dimen/_32dp"
            android:src="@drawable/bg_aktivitas"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="@dimen/_180dp"
            android:layout_height="@dimen/_80dp"
            app:layout_constraintEnd_toEndOf="@id/bg_head"
            app:layout_constraintTop_toTopOf="@id/bg_head"
            app:layout_constraintBottom_toBottomOf="@id/bg_head"
            android:src="@drawable/ic_tentang" />

        <TextView
            android:id="@+id/title_pemeriksaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/bg_head"
            app:layout_constraintTop_toTopOf="@id/bg_head"
            app:layout_constraintBottom_toBottomOf="@id/bg_head"
            android:layout_marginStart="@dimen/_16dp"
            style="@style/DMSansRegular"
            android:text="@string/tentang_kontak" />

        <TextView
            android:id="@+id/supported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DMSansRegular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_32dp"
            android:text="Supported by CentraHealthIT"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/supported"
            android:layout_marginBottom="@dimen/_16dp"
            style="@style/DMSansRegular"
            android:text="Versi 1.1 Tahun 2022"/>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>