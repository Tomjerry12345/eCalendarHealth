<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_32dp">
    <ImageView
        android:id="@+id/ic_sukses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_sukses"/>
    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_sukses"
        android:text="Sukses"
        android:layout_marginTop="@dimen/_16dp"
        style="@style/DMSansBoldTitle"/>

    <TextView
        android:id="@+id/subTitleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_dialog"
        android:layout_marginTop="@dimen/_8dp"
        android:text="Data anda berhasil dikirim"
        style="@style/DMSansRegular"/>

    <Button
        android:id="@+id/buttom"
        android:layout_width="@dimen/_130dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subTitleDialog"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:text="Ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_input"
        android:textAllCaps="false"
        android:fontFamily="@font/dmsans_bold"
        android:textSize="@dimen/_16sp"
        android:layout_marginTop="16dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>